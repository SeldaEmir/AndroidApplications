<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.serifgungor.customlist.FilterListActivity">

    <TextView
        android:id="@+id/textViewInFo"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/listViewFilterList"
        android:layout_marginStart="3dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupGenderFilter"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/spinnerShowPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<RadioGroup
    android:id="@+id/radioGroupGenderFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_constraintTop_creator="1"
    android:layout_marginStart="3dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RadioButton
        android:id="@+id/radioButtonListMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erkekler" />

    <RadioButton
        android:id="@+id/radioButtonListFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KÄ±zlar" />
</RadioGroup>

    <ListView
        android:id="@+id/listViewFilterList"
        android:layout_width="368dp"
        android:layout_height="432dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="3dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp" />
</android.support.constraint.ConstraintLayout>
