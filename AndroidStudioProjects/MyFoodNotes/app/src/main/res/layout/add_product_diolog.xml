<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextAddProdcutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="What You Eat/Drink?"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextAddProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Price?"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/checkBoxAddProductLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Did You Like?" />

    <Button
        android:id="@+id/buttonAddProductImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_camera"
        android:text="" />

    <Button
        android:id="@+id/buttonSaveProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>